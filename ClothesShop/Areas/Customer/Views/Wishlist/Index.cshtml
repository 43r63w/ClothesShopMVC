@model WishlistVM



<link rel="stylesheet" href="~/css/site.css" />

<div class=" py-md-5 bg-light">
    <div class="container ">
        <div class="row">
            <div class="col-md-12">
                <div class="shopping-cart">
                    @if (Model.Wishlists.Count() == 0)
                    {
                        <h4 class="text-center">Список бажаного пустий =(</h4>
                    }
                    else
                    {
                        @foreach (var item in Model.Wishlists)
                        {
                            <div class="cart-header d-none d-sm-none d-mb-block d-lg-block">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4>Назва</h4>
                                    </div>
                                    <div class="col-md-2">
                                        <h4>Товар</h4>
                                    </div>
                                    <div class="col-md-2">
                                        <h4>Видалити</h4>
                                    </div>
                                </div>
                            </div>

                            <div class="cart-item">
                                <div class="row">
                                    <div class="col-md-6 my-auto">
                                        <a href="">
                                            <label class="product-name">
                                                @if (item.ProductClothes.ProductImages != null)
                                                {
                                                    <img src="@item.ProductClothes.ProductImages.FirstOrDefault().ImageUrl" style="width: 50px; height: 50px" alt="">
                                                }
                                                else
                                                {
                                                    <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                                                }
                                                @item.ProductClothes.Brand - @item.ProductClothes.Name.ToLower()
                                            </label>
                                        </a>
                                    </div>
                                    <div class="col-md-2 my-auto">
                                        <label class="price">@item.ProductClothes.Price.ToString("c")</label>
                                    </div>
                                    <div class="col-md-2 col-5">
                                        <div class=" btn-group-sm d-flex  ">
                                            <a asp-action="Delete" asp-route-wishId="@item.Id" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                            <a asp-action="AddToCart" asp-route-productId="@item.ProductClothes.Id" class="btn btn-outline-primary h-25 btn-sm mx-2">
                                                <i class="bi bi-bag-plus"></i> 
                                                </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>
            </div>
        </div>
    </div>
</div>
